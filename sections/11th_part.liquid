<section class="gutbbl-sec">
    <div class="container">
        <h3 class="sec-titl">
            <p>What's Your Gut Feeling?</p>
            The Gut Bible</h3>
    </div>

    {% assign blog = blogs['the-gut-bible'] %}  <!-- Replace 'handle' with the blog handle -->
          {% for article in blog.articles %}
          <h1>{{article.tags}}{{article.metafields.custom.read_time}}</h1>
         <img src="{{article.image | image_url: width: 400}}"/> 
            <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
            <p>{{ article.excerpt }}</p>
          {% endfor %}
</section>

<style>
  .gutbbl-sec:before, .gutbbl-sec:after{
     background: url({{ 'sectionwhite-shape.svg' | asset_url }}) no-repeat;
     background-size:100%;
  }

  .gutbbl-sec:after{
      top: auto;
      bottom: -90px;
      transform: rotate(180deg);
  }
</style>

{% schema %}
  {
    "name": "Blog Section",
    "settings": []
  }
{% endschema %}